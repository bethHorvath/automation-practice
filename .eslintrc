{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "@sky-uk/eslint-config-sky",
    "@sky-uk/eslint-config-sky-react",
    "plugin:import/errors",
    "plugin:import/warnings",
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "js": true
    },
    "ecmaVersion": "latest"
  },
  "plugins": [
    "react", 
    "@typescript-eslint",
    "jest",
    "json-files",
    "react-hooks",
    "jest-dom",
    "testing-library"
  ],
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "single"]
  }
}
